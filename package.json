{
  "name": "esp-admin",
  "version": "1.1.1-rc",
  "private": true,
  "description": "Remote management for ESP microcontrollers",
  "homepage": "https://esp-admin.tn",
  "repository": "https://github.com/esp-admin/app",
  "author": "Becem Gharbi <becem.gharbi@live.com>",
  "scripts": {
    "build": "nuxt build",
    "build:docker": "docker build . -t becemgharbi/esp-admin",
    "release": "npm run lint && changelogen --release --versionSuffix rc && git push --follow-tags",
    "release:docker": "docker push becemgharbi/esp-admin",
    "prisma:generate:sql": "prisma generate --schema ./prisma/sql.schema.prisma",
    "prisma:generate:mongo": "prisma generate --schema ./prisma/mongo.schema.prisma",
    "prisma:migrate:sql": "prisma migrate dev --schema ./prisma/sql.schema.prisma",
    "prisma:migrate:mongo": "prisma db push --schema ./prisma/mongo.schema.prisma",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@bg-dev/nuxt-auth": "^2.0.2",
    "@bg-dev/nuxt-naiveui": "^1.5.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@nuxt/devtools": "^0.8.5",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/tailwindcss": "^6.8.0",
    "@types/mustache": "^4.2.3",
    "@types/randomstring": "^1.1.9",
    "@types/ua-parser-js": "^0.7.37",
    "changelogen": "^0.5.5",
    "eslint": "^8.50.0",
    "npm": "^10.2.0",
    "nuxt": "^3.7.4",
    "nuxt-s3": "^0.2.2",
    "nuxt-security": "^0.14.4",
    "prisma": "^5.4.1",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "vite-plugin-node-polyfills": "^0.15.0"
  },
  "dependencies": {
    "@prisma/client": "^5.4.1",
    "dayjs": "^1.11.10",
    "highcharts": "^11.1.0",
    "highcharts-vue": "^1.4.3",
    "highlight.js": "^11.8.0",
    "mqtt": "^5.1.0",
    "mustache": "^4.2.0",
    "randomstring": "^1.3.0",
    "ua-parser-js": "^1.0.36",
    "zod": "^3.22.4"
  }
}